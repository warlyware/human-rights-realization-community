{
    "paths": {
        "src": {
            "html": [
                "./src/app/*.html",
                "./src/app/**/*.html",
                "./src/app/**/**/*.html"
            ],
            "js": [
                "./src/app/*.js",
                "./src/app/**/*.js"
            ],
            "styles": [
                "./src/**/base.scss",
                "./src/**/colors.scss",
                "./src/**/**/*.scss"
            ],
            "styles_imports": "./src/styles"
        },
        "images": [
            "./src/img/*.jpg",
            "./src/img/*.gif",
            "./src/img/*.png"
        ],
        "node_modules": [
            "./node_modules/**/*.js",
            "./node_modules/**/*.css"
        ]
    }
}
